      margin-left: 0px;
      margin-right: 0px;
  }
  p {
      padding-left: 1%;
      padding-right: 0px;
      margin-left: 1%;
  }
  .post.post-type-normal {
    padding-left: 1%;
      padding-right: 1%;
  }
  ul {
    padding-left: 5%;
  }
  .post-button.text-center {
    margin-top: 0px;
  }
  blockquote {
    padding-left: 1%;
      padding-right: 1%;
  }
  .content-wrap {
    padding-left: 0.5em;
    padding-right: 0.5em;
  }

}


